<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.stage.Stage?>

<Stage minHeight="570.0" minWidth="750.0" title="Reminder" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/logo.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@customizedStyle/transparentTheme.css" />
            </stylesheets>
            <AnchorPane minHeight="570.0" minWidth="750.0">
            <children>
               <AnchorPane fx:id="mainWindow" minHeight="570.0" minWidth="750.0">
                  <children>
                     <ImageView fitHeight="150.0" fitWidth="225.0" pickOnBounds="true" preserveRatio="true" translateX="10.0" translateY="10.0">
                        <image>
                           <Image url="@/images/logoCalligraphy.png" />
                        </image>
                     </ImageView>
                     <Button fx:id="startButton" layoutX="329.0" layoutY="526.0" mnemonicParsing="false" onAction="#close" text="Start" textFill="#805555" wrapText="true">
                        <font>
                           <Font name="FreeMono" size="17.0" />
                        </font>
                     </Button>
                     <Text fx:id="header" fill="WHITE" layoutX="23.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0" text="In the next 3 days:" translateY="10.0">
                        <font>
                           <Font name="FreeSerif Bold Italic" size="20.0" />
                        </font>
                     </Text>
                     <TextArea fx:id="contentArea" editable="false" layoutX="54.0" layoutY="121.0" prefHeight="374.0" prefWidth="670.0" styleClass="result-display" wrapText="true">
                        <font>
                           <Font name="FreeSerif Bold Italic" size="20.0" />
                        </font>
                     </TextArea>
                  </children>
               </AnchorPane>
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
