<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="650.0" minWidth="1000.0" onCloseRequest="#handleExit" title="Tutor Tracker" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/address_book_32.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@DarkTheme.css" />
                <URL value="@Extensions.css" />
            </stylesheets>

            <VBox>
                <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                    <Menu mnemonicParsing="false" text="File">
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
                    </Menu>
                    <Menu mnemonicParsing="false" text="Help">
                        <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
                    </Menu>
                </MenuBar>

                <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
                    <padding>
                        <Insets bottom="5" left="10" right="10" top="5" />
                    </padding>
                </StackPane>
            <StackPane fx:id="filtersPanelPlaceholder" VBox.vgrow="NEVER" HBox.hgrow="ALWAYS"/>
            <HBox>
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <HBox style="-fx-background-color: #383838;">
                                    <children>
                                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/favorite_icon.png" />
                                            </image>
                                        </ImageView>
                                        <Label alignment="CENTER" prefHeight="25.0" style="-fx-text-fill: white;" styleClass="cell_big_label" text="Tutors">
                                            <HBox.margin>
                                                <Insets left="4.0" />
                                            </HBox.margin>
                                        </Label>
                                    </children>
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                    <padding>
                                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                                    </padding>
                                </HBox>

                                <VBox fx:id="personList" minWidth="500" prefWidth="150.0" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                                    <padding>
                                        <Insets bottom="10" left="10" right="10" top="10" />
                                    </padding>
                                    <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                                </VBox>
                            </children>
                        </VBox>
                        <VBox prefWidth="150.0" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER" style="-fx-background-color: #383838;">
                                    <children>
                                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/calendar_icon.png" />
                                            </image>
                                        </ImageView>
                                        <Label alignment="CENTER" prefHeight="25.0" style="-fx-text-fill: white;" styleClass="cell_big_label" text="Schedule">
                                            <HBox.margin>
                                                <Insets left="4.0" />
                                            </HBox.margin>
                                        </Label>
                                    </children>
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                </HBox>
                                <StackPane fx:id="calendarViewPane" maxHeight="300.0" minHeight="-Infinity" prefHeight="250.0" style="-fx-background-color: #383838" styleClass="pane-with-border" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                    <padding>
                                        <Insets bottom="5" left="10" right="10" top="5" />
                                    </padding>
                                </StackPane>
                                <TabPane fx:id="tabPanePlaceHolder" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                                    <stylesheets>
                                        <URL value="@TabStyle.css" />
                                    </stylesheets>
                                    <tabs>
                                        <Tab closable="false" text="Appointments">
                                            <content>
                                                <VBox>
                                                    <children>
                                                        <VBox fx:id="appointmentList" prefWidth="150.0" styleClass="pane-with-border">
                                                            <padding>
                                                                <Insets bottom="10" left="10" right="10" top="10" />
                                                            </padding>
                                                            <children>
                                                                <StackPane fx:id="appointmentListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </VBox>
                                            </content>
                                        </Tab>
                                        <Tab closable="false" text="Schedule">
                                            <content>
                                                <VBox>
                                                    <children>
                                                        <VBox fx:id="scheduleList" prefWidth="150.0" styleClass="pane-with-border">
                                                            <padding>
                                                                <Insets bottom="10" left="10" right="10" top="10" />
                                                            </padding>
                                                            <children>
                                                                <StackPane fx:id="scheduleListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </VBox>
                                            </content>
                                        </Tab>
                                    </tabs>
                                </TabPane>
                            </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <HBox style="-fx-background-color: #383838;">
                                    <children>
                                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/gradebook_icon.png" />
                                            </image>
                                        </ImageView>
                                        <Label alignment="CENTER" prefHeight="25.0" style="-fx-text-fill: white;" styleClass="cell_big_label" text="Grades">
                                            <HBox.margin>
                                                <Insets left="4.0" />
                                            </HBox.margin>
                                        </Label>
                                    </children>
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                    <padding>
                                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                                    </padding>
                                </HBox>

                                <VBox fx:id="gradeList" prefWidth="150.0" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                                    <padding>
                                        <Insets bottom="10" left="10" right="10" top="10" />
                                    </padding>
                                    <StackPane fx:id="gradeListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                                </VBox>
                            </children>
                        </VBox>

                    </children>
                </HBox>
                <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
            </VBox>
        </Scene>
    </scene>
</fx:root>
