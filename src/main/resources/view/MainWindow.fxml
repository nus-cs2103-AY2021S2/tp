<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         title="STOREMANDO" minWidth="450" minHeight="600" onCloseRequest="#handleExit">
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@MainTheme.css"/>
                <URL value="@Extensions.css"/>
            </stylesheets>

            <VBox>
                <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                    <Menu mnemonicParsing="false" text="Shortcuts">
                        <MenuItem fx:id="helpButton" mnemonicParsing="false" onAction="#handleHelp" text="Help"/>
                        <MenuItem fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" text="Exit"/>
                    </Menu>
                </MenuBar>

                <StackPane VBox.vgrow="NEVER" fx:id="commandBoxPlaceholder" styleClass="pane-with-border">
                    <padding>
                        <Insets top="10" right="10" bottom="5" left="10"/>
                    </padding>
                </StackPane>

                <StackPane VBox.vgrow="NEVER" fx:id="resultDisplayPlaceholder" styleClass="pane-with-border"
                           minHeight="100" prefHeight="100" maxHeight="100">
                    <padding>
                        <Insets top="5" right="10" bottom="5" left="10"/>
                    </padding>
                </StackPane>

                <VBox fx:id="itemList" styleClass="pane-with-border" minWidth="340" prefWidth="340"
                      VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="5" right="10" bottom="10" left="10"/>
                    </padding>
                    <StackPane fx:id="itemListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                </VBox>
            </VBox>
        </Scene>
    </scene>
</fx:root>
