<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="600" minWidth="800" onCloseRequest="#handleExit" title="FriendDex" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene fx:id="mainScene">
      <stylesheets>
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu styleClass="menu" mnemonicParsing="false" text="File">
            <MenuItem styleClass="menu-item" mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>
          <HBox alignment="CENTER" minWidth="700.0" prefWidth="700.0" VBox.vgrow="ALWAYS">
              <VBox fx:id="groupList" minWidth="200.0" prefWidth="200.0" styleClass="pane-with-border">
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                  </padding>
                  <StackPane fx:id="groupListPanelPlaceholder"/>
              </VBox>

              <VBox fx:id="personList" minWidth="300.0" prefWidth="300.0" styleClass="pane-with-border"
                    HBox.hgrow="ALWAYS">
                  <padding>
                      <Insets bottom="10" left="10" right="10" top="10"/>
                  </padding>
                  <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
              </VBox>

              <VBox fx:id="details" minWidth="200.0" prefWidth="200.0" styleClass="pane-with-border">
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                  </padding>
                  <StackPane fx:id="detailsPanelPlaceholder" VBox.vgrow="ALWAYS" />
              </VBox>
          </HBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
