<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <stylesheets>
    <URL value="@ProjectDisplayPanel.css"/>
  </stylesheets>

  <GridPane HBox.hgrow="ALWAYS" minHeight="45" prefHeight="45" maxHeight="45">
    <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10"/>
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15"/>
      </padding>
      <HBox spacing="5">
        <Label fx:id="id" styleClass="cell_big_label" minWidth="-Infinity"/>
        <Label fx:id="eventDescription" text="\$first" styleClass="cell_big_label" minWidth="-Infinity"/>
      </HBox>
      <HBox>
        <padding>
          <Insets top="0" right="0" bottom="0" left="20"/>
        </padding>

        <Label fx:id="dateTime" styleClass="cell_small_label" minWidth="-Infinity"/>
      </HBox>
    </VBox>
  </GridPane>
</HBox>
