<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS" minHeight="45" prefHeight="45" maxHeight="45">
    <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10"/>
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5"/>
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label" minWidth="-Infinity"/>
        <Label fx:id="description" styleClass="cell_big_label" minWidth="-Infinity"/>
        <Label fx:id="completedLabel" styleClass="cell_big_label" minWidth="-Infinity"/>
      </HBox>
      <HBox>
        <Label fx:id="date" styleClass="cell_small_label" text="\$date" minWidth="-Infinity">
          <padding>
            <Insets bottom="0" left="20" right="5" top="0"/>
          </padding>
        </Label>
        <Label fx:id="day" styleClass="cell_small_label" text="\$day" minWidth="-Infinity"/>
      </HBox>
    </VBox>
    <rowConstraints>
      <RowConstraints/>
    </rowConstraints>
  </GridPane>
</HBox>
