<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>

<HBox id="driverCardPane" fx:id="driverCardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="125" />
    </columnConstraints>
    <VBox>
      <padding>
        <Insets top="5" right="10" bottom="5" left="10" />
      </padding>
      <Label fx:id="message" styleClass="driverPane_message" text="\$message" />
      <VBox id="cardFieldsContainer" fx:id="cardFieldsContainer">
        <padding>
          <Insets top="3" right="0" bottom="3" left="0" />
        </padding>
      </VBox>
    </VBox>
  </GridPane>
</HBox>
