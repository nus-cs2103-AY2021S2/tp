<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="descriptions" />
      <Label fx:id="size" styleClass="cell_small_label" text="\$size" />
      <Label fx:id="lastused" styleClass="cell_small_label" text="\$lastused" />
    </VBox>
    <VBox alignment="CENTER_RIGHT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="35" right="50" bottom="0" left="0"/>
      </padding>
      <Label fx:id="sampleImage" styleClass="cell_small_label" />
    </VBox>
    <VBox alignment="CENTER_RIGHT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="35" right="140" bottom="0" left="0"/>
      </padding>
      <Label fx:id="dressCodeImage" styleClass="cell_small_label" />
    </VBox>
  </GridPane>
</HBox>
