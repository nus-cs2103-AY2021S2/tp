<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="400.0" minWidth="400.0" resizable="true" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene fill="BLACK">
         <VBox prefHeight="380.0" prefWidth="548.0" style="-fx-background-color: #383838;">
            <children>
               <TextArea fx:id="helpMessageField" editable="false" scaleShape="false" style="-fx-background-color: #1d1d1d; -fx-border-color: #383838;" wrapText="true" VBox.vgrow="ALWAYS" />
               <VBox prefHeight="42.0" prefWidth="538.0">
                  <children>
                     <HBox alignment="BOTTOM_RIGHT" prefHeight="0.0" VBox.vgrow="ALWAYS">
                        <children>
                           <Button fx:id="copyButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" mouseTransparent="true" onAction="#copyUrl" onMousePressed="#copyUrl" pickOnBounds="false" style="-fx-background-color: #555555; -fx-text-fill: white;" text="Copy URL">
                              <cursor>
                                 <Cursor fx:constant="NONE" />
                              </cursor>
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                           </Button>
                        </children>
                        <padding>
                           <Insets bottom="5.0" left="5.0" right="10.0" />
                        </padding>
                     </HBox>
                  </children>
               </VBox>
            </children>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         </VBox>
    </Scene>
  </scene>
</fx:root>
