<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
        <GridPane>
            <HBox alignment="BASELINE_RIGHT" GridPane.rowIndex="0">
                <opaqueInsets>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </opaqueInsets>
                <padding>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </padding>
                <Label fx:id="helpMessage" text="Label">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUserGuideUrl" text="Copy URL">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin>
                </Button>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </HBox>
            <HBox alignment="BASELINE_RIGHT" GridPane.rowIndex="1">
                <opaqueInsets>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </opaqueInsets>
                <padding>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </padding>
                <Label fx:id="helpApiMessage" text="Label">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <Button fx:id="copyApiButton" mnemonicParsing="false" onAction="#copyApiGuideUrl" text="Copy URL">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin>
                </Button>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </HBox>
            <Label alignment="BASELINE_CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="995.0" text="Command Summary" GridPane.columnIndex="0" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font></Label>
            <TableView fx:id="tableView" GridPane.rowIndex="3">
                <columns>
                    <TableColumn text="Action">
                        <cellValueFactory><PropertyValueFactory property="action" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Format">
                        <cellValueFactory><PropertyValueFactory property="format" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="552.6666870117188" text="Example">
                        <cellValueFactory><PropertyValueFactory property="example" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <UserGuide action="Help" example="help" format="help" />
                        <UserGuide action="Toggle" example="toggle light" format="toggle THEME" />
                        <UserGuide action="Exit" example="exit" format="exit" />
                        <UserGuide action="Add" example="add -x GET -u http://localhost:3000/ -d {&quot;some&quot;: &quot;data&quot;} -h &quot;key: value1&quot; -t local -t data" format="add -x METHOD -u URL [-d DATA] [-h HEADER]… [-t TAG]…" />
                        <UserGuide action="Edit" example="edit 1 -x GET -u http://localhost:3000/ -d {&quot;some&quot;: &quot;data&quot;} -h &quot;key: value1&quot; -t local -t data" format="edit INDEX [-x METHOD] [-u URL] [-d DATA] [-h HEADER]… [-t TAG]…" />
                        <UserGuide action="Show" example="show 1" format="show INDEX" />
                        <UserGuide action="Remove" example="remove 3" format="remove INDEX" />
                        <UserGuide action="Find" example="find maps OR find -x get" format="find KEYWORD [MORE_KEYWORDS]…" />
                        <UserGuide action="List" example="list" format="list" />
                        <UserGuide action="Clear" example="clear" format="clear" />
                        <UserGuide action="Send" example="send 1" format="send INDEX" />
                        <UserGuide action="Run" example="run -x GET -u https://api.data.gov.sg/v1/environment/uv-index" format="run -x METHOD -u URL [-d DATA] [-h HEADER]… OR run URL" />
                    </FXCollections>
                </items>
            </TableView>
            <columnConstraints>
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
    </GridPane>

    </Scene>
  </scene>
</fx:root>
