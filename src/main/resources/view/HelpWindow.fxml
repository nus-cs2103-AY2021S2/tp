<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="true" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
         <VBox prefHeight="162.0" prefWidth="542.0">
            <children>
               <AnchorPane prefHeight="125.0" prefWidth="542.0">
                  <children>
                     <Label fx:id="helpMessage" contentDisplay="CENTER" layoutX="7.0" layoutY="7.0" prefHeight="120.0" prefWidth="529.0" text="Label">
                        <opaqueInsets>
                           <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
                        </opaqueInsets>
                     </Label>
                  </children>
               </AnchorPane>
               <HBox alignment="BOTTOM_RIGHT" prefHeight="23.0" prefWidth="542.0">
                  <children>
                     <Button fx:id="copyButton" alignment="CENTER" mnemonicParsing="false" onAction="#copyUrl" prefHeight="27.0" prefWidth="79.0" text="Copy URL">
                        <cursor>
                           <Cursor fx:constant="NONE" />
                        </cursor>
                        <opaqueInsets>
                           <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                        </opaqueInsets>
                     </Button>
                  </children>
               </HBox>
            </children>
         </VBox>
    </Scene>
  </scene>
</fx:root>
