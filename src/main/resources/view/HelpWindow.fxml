<fx:root resizable="true" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene fill="BLACK">
         <VBox style="-fx-background-color: #383838;">
            <children>
               <AnchorPane prefHeight="229.0" prefWidth="643.0" stylesheets="@DarkTheme.css">
                  <children>
                     <TextField fx:id="helpMessageField" layoutX="14.0" layoutY="100.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: dimgray;">
                        <padding>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                     </TextField>
                     <Label fx:id="helpMessage" contentDisplay="CENTER" style="-fx-background-color: #555555#555555; -fx-text-fill: white;" text="" textFill="WHITE" wrapText="true">
                        <opaqueInsets>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </opaqueInsets>
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                     </Label>
                  </children>
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
               </AnchorPane>
               <HBox alignment="BOTTOM_RIGHT" prefHeight="39.0" prefWidth="558.0">
                  <children>
                     <Button fx:id="copyButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" mouseTransparent="true" onAction="#copyUrl" onMousePressed="#copyUrl" pickOnBounds="false" style="-fx-background-color: #555555; -fx-text-fill: white;" text="Copy URL">
                        <cursor>
                           <Cursor fx:constant="NONE" />
                        </cursor>
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                     </Button>
                  </children>
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="10.0" />
                  </padding>
               </HBox>
            </children>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         </VBox>
    </Scene>
  </scene>
</fx:root>
