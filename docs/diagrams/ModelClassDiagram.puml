@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyPlanner <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Class Planner
Class ReadOnlyPlanner
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs

Package Task {
Class Task
Class Deadline
Class RecurringSchedule
Class Title
Class Status
Class Duration
Class Description
Class UniqueTaskList
}

Package Tag {
Class Tag
Class UniqueTagList
}
}

Class HiddenOutside #FFFFFF
HiddenOutside ...> Model

Planner .up.|> ReadOnlyPlanner

ModelManager .up.|> Model
Model .right.> ObservableList
ModelManager o--> "1" Planner
ModelManager o-left-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

Planner *--> "1" UniqueTaskList
UniqueTaskList o--> "*" Task
Planner *--> "1" UniqueTagList
UniqueTagList *--> "*" Tag
Task *--> Title
Task *--> Deadline
Task *--> Duration
Task *--> RecurringSchedule
Task *--> Description
Task *--> Status
Task o--> "*" Tag

Title -[hidden]right-> Deadline
Deadline -[hidden]right-> Duration
Duration -[hidden]right-> RecurringSchedule
RecurringSchedule -[hidden]right-> Description
Description -[hidden]right-> Status


ModelManager ----->" ~* filtered list" Task
@enduml
