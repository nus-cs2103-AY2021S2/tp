@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyAddressBook <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Class AddressBook
Class ReadOnlyAddressBook
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs
Class AppointmentSchedule
Interface ReadOnlyAppointmentSchedule <<Interface>>

Package Person {
Class Person
Class Patient
Class Doctor
Class DoctorMap
Class PatientMap
Class Address
Class Email
Class Name
Class Phone
Class UniquePersonList
}

Package Tag {
Class Tag
}


Package Appointment {
Class Appointment
Class Timeslot
Class NonConflictingAppointmentList
}
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook ..|> ReadOnlyAddressBook
AppointmentSchedule .up.|> ReadOnlyAppointmentSchedule

ModelManager .up.|> Model
Model .right.> ObservableList
Doctor .right.> DoctorMap
Patient .right.> PatientMap
ModelManager o-right-> "1" AddressBook
ModelManager o-left-> "1" AppointmentSchedule
ModelManager o-left-> "1" UserPrefs
UserPrefs ..|> ReadOnlyUserPrefs

AddressBook *--> "1" UniquePersonList
AppointmentSchedule *--> "1" NonConflictingAppointmentList
UniquePersonList o--> "*" Person
NonConflictingAppointmentList O-left-> "*" Appointment
Person *---> Name
Person *---> Phone
Person *---> Email
Person *---> Address
Person *---> "*" Tag
Patient --|> Person
Doctor --|> Person
Appointment *--> Patient
Appointment *--> Doctor
Appointment *--> Timeslot

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

ModelManager ----> Patient : " ~* filtered list"
ModelManager ----> Doctor : " ~* filtered list"
ModelManager ----> Appointment : " ~* filtered list"
@enduml
